{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "globals.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*stories.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}