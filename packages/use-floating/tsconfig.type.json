{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}