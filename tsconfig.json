{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "esnext",
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "tdesign-vue-next": ["src/*"],
      "@common/*": ["src/_common/*"],
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "src/**/*.vue",
    "scripts/rollup.config.js"
  ],
  
  "exclude": [
    "node_modules",
    "src/_common",
    "dist",
    "lib",
    "esm",
    "es",
  ],
  "compileOnSave": false
}
