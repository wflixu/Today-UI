{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
      "outDir": "dist/",
      "declaration": true,
      "emitDeclarationOnly": true,
      "verbatimModuleSyntax": false,
      "incremental": false,
      "strictNullChecks": false
    },
    "include": ["src/**/*.ts",  "src/**/*.tsx", "src/**/*.vue", "src/*.ts", "package.json"],
    "exclude": [
      "src/**/*stories.ts",
      "node_modules",
      "dist"
    ]
  }
  